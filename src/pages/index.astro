---
import "../styles/global.css";
import { Typography } from "@/components/ui/typography";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio - Typography Demo</title>
	</head>
	<body>
		<div class="container mx-auto px-4 py-12 max-w-4xl">
			<!-- Display Font Examples -->
			<Typography client:load variant="display" font="display">
				Bitcount Display
			</Typography>

			<div class="mt-12 space-y-8">
				<!-- Sans Font Examples -->
				<section>
					<Typography client:load variant="h2" font="sans">
						Nunito Sans - Headings & Body
					</Typography>
					<Typography client:load variant="p" font="sans">
						This is body text using Nunito Sans. It's a clean, modern sans-serif font
						perfect for UI elements and general content. The font features excellent
						readability at various sizes and weights.
					</Typography>
					<Typography client:load variant="lead" font="sans">
						This is a lead paragraph with larger text to draw attention.
					</Typography>
				</section>

				<!-- Serif Font Examples -->
				<section>
					<Typography client:load variant="h2" font="serif">
						Merriweather - Elegant Serif
					</Typography>
					<Typography client:load variant="p" font="serif">
						This is body text using Merriweather, a beautiful serif typeface designed
						for optimal readability in long-form content. It brings a classic,
						sophisticated feel to your typography.
					</Typography>
					<Typography client:load variant="blockquote" font="serif">
						"Typography is the craft of endowing human language with a durable visual
						form." â€” Robert Bringhurst
					</Typography>
				</section>

				<!-- Display Font Examples -->
				<section>
					<Typography client:load variant="h2" font="display">
						Bitcount Prop Double - Display
					</Typography>
					<Typography client:load variant="p" font="display">
						This unique monospaced font is perfect for headings and display text,
						adding a technical and modern aesthetic to your design.
					</Typography>
				</section>

				<!-- Size Variants -->
				<section>
					<Typography client:load variant="h2">Typography Variants</Typography>
					<Typography client:load variant="h3">Heading 3</Typography>
					<Typography client:load variant="h4">Heading 4</Typography>
					<Typography client:load variant="large">Large text</Typography>
					<Typography client:load variant="small">Small text</Typography>
					<Typography client:load variant="muted">Muted text</Typography>
				</section>
			</div>
		</div>
	</body>
</html>
